<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.Hyperwallet.ProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:indeterminateTint">@color/colorPrimary</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <style name="Widget.Hyperwallet.ProgressBar.CreateButton" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/regularColorPrimary</item>
        <item name="android:indeterminateTint">@color/regularColorPrimary</item>
        <item name="android:elevation">@dimen/progress_bar_elevation</item>
    </style>

    <style name="TextAppearance.Hyperwallet.Headline4" parent="@style/TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/regularColorPrimary</item>
    </style>

    <style name="ThemeOverlay.Hyperwallet.Selector.ActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/regularColorPrimary</item>
        <item name="android:titleTextAppearance">
            @style/TextAppearance.Hyperwallet.TitleTextAppearance
        </item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ThemeOverlay.Hyperwallet.Searchable.Selector.ActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/regularColorPrimary</item>
        <item name="android:titleTextAppearance">
            @style/TextAppearance.Hyperwallet.TitleTextAppearance
        </item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Base.Hyperwallet.RecyclerView" parent="@style/Widget.AppCompat.ListView">
        <item name="android:background">@color/colorSecondaryAccent</item>
    </style>

    <style name="Selector.Hyperwallet.RecyclerView" parent="@style/Base.Hyperwallet.RecyclerView">
        <item name="android:background">@color/regularColorPrimary</item>
    </style>

    <style name="Widget.Hyperwallet.CollapsingToolbar" parent="@style/Widget.Design.CollapsingToolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="contentScrim">@color/colorPrimary</item>
    </style>

    <style name="Widget.Hyperwallet.FloatingActionButton" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.Hyperwallet.Body2" parent="@style/Base.TextAppearance.Hyperwallet.Body2">
        <item name="android:textColor">@color/colorSecondaryDark</item>
    </style>

    <style name="TextAppearance.Hyperwallet.Subtitle2" parent="@style/TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorSecondaryDark</item>
    </style>

    <style name="Base.TextAppearance.Hyperwallet.Body2" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.Hyperwallet.Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/regularColorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_body1</item>
    </style>

    <style name="Widget.Hyperwallet.Text.Button" parent="@style/Widget.Hyperwallet.Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextAppearance.Hyperwallet.Headline6" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.Hyperwallet.TitleTextAppearance" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.Hyperwallet.Caption" parent="Base.TextAppearance.Hyperwallet.Caption">
        <item name="android:textSize">@dimen/font_body1</item>
    </style>

    <style name="Base.TextAppearance.Hyperwallet.Caption" parent="TextAppearance.MaterialComponents.Caption" />

    <style name="TextAppearance.Hyperwallet.InputLabel" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/font_body2</item>
    </style>

    <style name="TextAppearance.Hyperwallet.Currency.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/font_currency_symbol</item>
    </style>

    <style name="TextAppearance.Hyperwallet.CurrencyCode.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/font_currency_code</item>
    </style>

    <style name="TextAppearance.Hyperwallet.Clickable.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Text Input style & theme -->
    <style name="ErrorText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="HintText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorSecondaryDark</item>
    </style>

    <style name="HintTextDisabled" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="Widget.Hyperwallet.TextInputLayout" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="helperTextTextAppearance">@style/TextAppearance.Design.HelperText</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/regularColorSecondary</item>
        <item name="android:textColorHint">@color/colorSecondaryDark</item>
        <item name="colorControlNormal">@color/colorSecondaryLight</item>
        <item name="android:background">@null</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="Widget.Hyperwallet.AmountTextInputLayout" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="helperTextTextAppearance">@style/TextAppearance.Design.HelperText</item>
        <item name="hintTextAppearance">@null</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/regularColorSecondary</item>
        <item name="android:textColorHint">@color/colorSecondaryDark</item>
        <item name="colorControlNormal">@color/colorSecondaryLight</item>
        <item name="android:background">@null</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="Widget.Hyperwallet.TextInputLayout.Disabled" parent="Widget.Hyperwallet.TextInputLayout">
        <item name="hintTextAppearance">@style/HintTextDisabled</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textColorHint">@color/colorLabelDisabled</item>
        <item name="android:background">@color/colorBackgroundDisabled</item>
    </style>

    <style name="Widget.Hyperwallet.TextInputEditText" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="colorControlNormal">@color/colorSecondaryLight</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">@dimen/text_input_hint_text_padding</item>
        <item name="android:paddingLeft">@dimen/edit_text_layout_padding_start_offset</item>
        <item name="android:paddingStart" tools:ignore="NewApi">
            @dimen/edit_text_layout_padding_start_offset
        </item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingEnd" tools:ignore="NewApi">0dp</item>
    </style>

    <style name="Theme.Hyperwallet.Confirmation.Dialog" parent="Base.Theme.MaterialComponents.Light">
        <item name="alertDialogTheme">@style/Widget.Hyperwallet.Confirmation.Dialog.Alert</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Widget.Hyperwallet.Confirmation.Dialog.Alert" parent="Base.Theme.MaterialComponents.Light.Dialog">
        <item name="android:textColorPrimary">@color/colorSecondaryDark</item>
        <item name="android:windowTitleStyle">@style/TextAppearance.Hyperwallet.Dialog.Alert.Title
        </item>
        <item name="buttonBarNegativeButtonStyle">
            @style/Widget.Hyperwallet.Confirmation.Button.Negative
        </item>
        <item name="buttonBarPositiveButtonStyle">
            @style/Widget.Hyperwallet.Confirmation.Button.Positive
        </item>
        <item name="windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="Widget.Hyperwallet.Confirmation.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorSecondaryDark</item>
        <item name="android:letterSpacing">0.12</item>
    </style>

    <style name="Widget.Hyperwallet.Confirmation.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:letterSpacing">0.12</item>
    </style>

    <style name="Theme.Hyperwallet.Alert" parent="Base.Theme.MaterialComponents.Light">
        <item name="alertDialogTheme">@style/Widget.Hyperwallet.Dialog.Alert</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Widget.Hyperwallet.Dialog.Alert" parent="Base.Theme.MaterialComponents.Light.Dialog">
        <item name="android:textColorPrimary">@color/colorSecondaryDark</item>
        <item name="buttonBarNegativeButtonStyle">
            @style/Widget.Hyperwallet.Button.Negative
        </item>
        <item name="buttonBarPositiveButtonStyle">
            @style/Widget.Hyperwallet.Button.Positive
        </item>
        <item name="android:windowTitleStyle">@style/TextAppearance.Hyperwallet.Dialog.Alert.Title
        </item>
        <item name="windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="Widget.Hyperwallet.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorSecondaryDark</item>
        <item name="android:letterSpacing">0.12</item>
    </style>

    <style name="Widget.Hyperwallet.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:letterSpacing">0.12</item>
    </style>

    <style name="TextAppearance.Hyperwallet.Dialog.Alert.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/regularColorSecondary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Hyperwallet.Dialog.Alert.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorSecondaryDark</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Widget.Hyperwallet.DatePicker" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.Hyperwallet.Subtitle1" parent="@style/TextAppearance.MaterialComponents.Subtitle1" />

    <style name="TextAppearance.Add.TransferMethod" parent="@style/TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.Hyperwallet.Switch" parent="Theme.MaterialComponents.Light">
        <item name="android:colorControlActivated">@color/colorPrimary</item>
    </style>

    <!-- overridable styles -->
    <style name="TextAppearance.Hyperwallet.Headline5" parent="@style/TextAppearance.MaterialComponents.Headline5" />

    <style name="TextAppearance.Hyperwallet.Headline2" parent="@style/TextAppearance.MaterialComponents.Headline2" />

    <style name="TextAppearance.Hyperwallet.Body1" parent="@style/TextAppearance.MaterialComponents.Body1" />

    <style name="TextAppearance.Hyperwallet.CollapsingToolbar.Expanded" parent="@style/TextAppearance.Design.CollapsingToolbar.Expanded" />

    <style name="TextAppearance.Hyperwallet.Title" parent="@style/TextAppearance.AppCompat.Title" />

    <style name="TextAppearance.Hyperwallet.Title.Collapse.ExtraSmall" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/collapse_toolbar_collapse_extrasmall</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Hyperwallet.Title.Collapse.Small" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/collapse_toolbar_collapse_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Hyperwallet.Title.Collapse.Medium" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/collapse_toolbar_collapse_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Hyperwallet.Title.Collapse.Large" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/collapse_toolbar_collapse_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Hyperwallet.Title.Expanded.ExtraSmall" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/collapse_toolbar_expand_extrasmall</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Hyperwallet.Title.Expanded.Small" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/collapse_toolbar_expand_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Hyperwallet.Title.Expanded.Medium" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/collapse_toolbar_expand_medium</item>
        <item name="android:textStyle">bold</item>
